<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field">

    <class name="tourism.bean.TravelLineInfo" table="TravelLineInfo" schema="tourism">
        <id name="id" access="property">
            <column name="id" not-null="true">
                <comment>主键</comment>
            </column>
        </id>
        <property name="createTime" type="timestamp" update="false">
            <column name="create_time" sql-type="date" not-null="true" default="systimestamp">
                <comment>创建时间</comment>
            </column>
        </property>
        <property name="pathNo" not-null="true" type="java.lang.String">
            <column name="pathNo">
                <comment>路线编号</comment>
            </column>
        </property>
        <property name="travelNo" not-null="true" type="java.lang.String">
            <column name="travelNo">
                <comment>旅行团编号</comment>
            </column>
        </property>
        <property name="travelNo" not-null="true" type="java.lang.String">
            <column name="travelNo">
                <comment>旅行团编号</comment>
            </column>
        </property>
        <property name="pathName" type="java.lang.String">
            <column name="pathName">
                <comment>路线名称</comment>
            </column>
        </property>
        
        <property name="amount" type="java.lang.Double" not-null="true">
            <column name="amount">
                <comment>消费金额</comment>
            </column>
        </property>
        
        <property name="able" type="boolean">
            <column name="able" default="true">
                <comment>旅行团是否可用</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>